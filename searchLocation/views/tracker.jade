doctype html
html
	head
		title Trackers
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet', href='http://code.jquery.com/mobile/1.3.1/jquery.mobile-1.3.1.min.css', type='text/css' )
		script(src="http://code.jquery.com/jquery-1.9.1.min.js")
		script(src="http://code.jquery.com/mobile/1.3.1/jquery.mobile-1.3.1.min.js")
		script(src="/socket.io/socket.io.js")
		script(src="/javascripts/tracker.js")
	body
		// 아이디 등록 페이지
		div(data-role="page")
			div(data-role="header")
				h1 Location Tracker
			div(data-role="content")
				div(data-role="fieldcontain")
					label(for="textinput") Name
					input#textinput(type="textbox")
				a(href='#tracker', data-role='button') Start Track
		// 위치 추적 페이지
		div#tracker(data-role="page")
			div(data-role="header")
				h1 Location Tracker
			div(data-role="content")
				ul#listview(data-role="listview", data-inset="true")
